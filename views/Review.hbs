<div class="d-flex justify-content-center">
    <form method="post" action="/Review" class="shadow rounded-3 m-3 p-3">
        <h1>A review on {{title}}</h1>
        <div class="form-group p-2">
            <label for="name" class="form-label">Pen Name:</label>
            <input class="form-text" type="text" name="name" id="name">
            <div class="invalid-feedback">
                <p>{{err.name}}</p>
            </div>
        </div>
        <div class="form-group p-2">
            <label for="comment" class="form-label">Comment:</label>
            <textarea id="comment" name="comment" rows="4" cols="50"></textarea>
            <div class="invalid-feedback">
                <p>{{err.comment}}</p>
            </div>
        </div>

        <div class="form-group p-2">
            <label for="rating" class="form-label">Rating:</label>
            <input class="form-range w-25" type="range" id="rating" name="rating" min="0" max="5" value="2" step="1">
            <div class="invalid-feedback">
                <p>{{err.rating}}</p>
            </div>
        </div>
        <div class="form-group p-2">
            <label for="Review_photo">Upload a photo:</label><br>
            <input type="file" class="form-control-file" id="Review_photo">
            <div class="invalid-feedback">
                <p>{{err.photo}}</p>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>